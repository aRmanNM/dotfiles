# dunst solarized theme
# tostiheld 2015

[global]
    font                 = Lemon 8
    allow_markup         = yes
    plain_text           = no
    format               = "%s\n%b"
    transparency         = 0
    ignore_newline       = no
    show_indicators      = yes
    separator_color      = frame
    
    sort                 = yes
    alignment            = left
    bounce_freq          = 0
    word_wrap            = yes
    
    indicate_hidden      = yes
    show_age_threshold   = 60
    idle_threshold       = 120
    
    geometry             = "300-10+37"
    shrink               = yes
    line_height          = 2
    notification_height  = 0
    separator_height     = 2
    padding              = 7
    horizontal_padding   = 10
    
    monitor              = 0
    follow               = mouse
    
    sticky_history       = yes
    history_length       = 20
	
	icon_position = off    

    startup_notification = false
    dmenu                = dmenu -fn "lemon-8" -lh 24 -p dunst:
    browser              = /usr/bin/firefox -new-tab

[frame]
    width = 1
    color = "#111113"

[shortcuts]
    close     = ctrl+space
    close_all = ctrl+shift+space
    history   = ctrl+grave
    context   = ctrl+shift+period

[urgency_low]
    background = "#424242"
    foreground = "#eee8d5"
    timeout = 2

[urgency_normal]
    background = "#424242"
    foreground = "#FFFFFF"
    timeout = 2

[urgency_critical]
    background = "#dc322f"
    foreground = "#eee8d5"
    timeout = 2
